#include <stdio.h>
#include <string.h>
int main()
{
    int arr[]={1,2,3,4,5,6,7};
    int a=3;
    int left=0;
    int sz=sizeof(arr)/sizeof(arr[0]);
    int right=sz-1;
    while(left<=right)
    {
        int mid=(left+right) /2;
       if(arr[mid]>a)
       {right=mid-1;
       }
       else if(arr[mid]<a)
        {
            left=mid+1;
        }
        else
        {
            printf("point:%d",mid);
            break;
        }
    }
     if(left>right)
   {
    printf("Can't find.\n") ;
   }
    return 0;
}
